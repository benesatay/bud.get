<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorActionBar</item>
        <item name="colorPrimaryDark">@color/colorActionBar</item>
        <item name="colorAccent">@color/colorActionBar</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">#353535</item>
    </style>

    <style name="CustomEditTextStyleForName" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">#AEEA00</item>
    </style>

    <style name="toolbarTitleSize" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:height">35dp</item>
    </style>

</resources>
